{
  "name": "encontro",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "Multiplayer WebXR encounter ceremony â€” soul encounters in virtual space",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "npm run lint && tsc --noEmit && vite build",
    "build:client": "vite build",
    "build:server": "esbuild server/src/index.ts --bundle --platform=node --outfile=dist/server.cjs --format=cjs --external:ws",
    "start:server": "node dist/server.cjs",
    "check": "tsc --noEmit",
    "lint": "eslint client/src",
    "lint:fix": "eslint client/src --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "three": "^0.170.0",
    "tone": "^15.0.4",
    "ws": "^8.18.0",
    "express": "^4.21.0",
    "concurrently": "^9.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/three": "^0.170.0",
    "@types/ws": "^8.5.13",
    "@types/express": "^5.0.0",
    "@types/node": "^20.16.11",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.25.0",
    "eslint": "^9.17.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-glsl": "^1.3.1"
  }
}
